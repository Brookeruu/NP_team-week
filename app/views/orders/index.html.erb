<h6>User Account Page</h6>
<% if current_user.admin?%>
  <h3>Logged in as Admin: <strong><%= current_user.email %></strong></h3>
    <h5><%= link_to "View Donation Records", orders_admin_path %></h5>
<% else %>
  <h3>Logged in as: <strong><%= current_user.email %></strong></h3>
  <% end %>
<hr>

<h4>Thank you for your support! <br>

  <% if @orders %>

  <p>You have made the following contributions:</p>


  <ul>
    <% @orders.each do |order| %>
      <li>Order Id: <%= link_to order.id, order_path(order.id), class: "order-link" %> </li>
      <p>Total Donation: $<%= order.total %></p>
      <p>Order Date: <%= order.created_at.strftime("%Y-%m-%d") %></p>
      <hr>
      <% end %>
  </ul>
<% end %>
