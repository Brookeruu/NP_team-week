<h2>Your Cart</h2>
<% if @order_items.any? %>
  <% @order_items.each do |item| %>
    <p><%= item.nonprofit.name %> | <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %></p>
    <p> Amount: <%= number_to_currency item.amount %></p>
  <% end %>
  <p>Your Total: <%= number_to_currency current_order.calculate_total %></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
